<h1>New Member</h1>

<form method="POST" action="/members">
	<label for="name">Name</label>
	<input id="name" name="name">
	<label for="email">Email</label>
	<input id="email" name="email">
	<label>dayshift</label>
	<select name="dayshift">
		<option value="day">day</option>
		<option value="night">night</option>
	</select>
	<label for="available">Available</label>
	<input id="available" type="checkbox" name="available">


	<h2>Skills</h2>
	<div>
		<% @skills.each do |skill| %>
			<label><%= skill.name %></label>
			<input type="checkbox" name="skills[]" value="<%= skill.id %>">
		<% end %>
	</div>
	<button>Submit</button>
	
	<div class="form-group has-error">
	  <label class="control-label" for="inputError1"><%= flash[:error] %></label>
	</div>


</form>
<form method="POST" action="/member/skills">
	<label for="skill">New skill</label>
	<input id="skill" name="skill">
	<button>Add</button>
</form>