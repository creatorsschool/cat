<%= render "shared/page_title", title: "New Project" %>

<div class="section"></div>
<div class="container">
  <div class="row">
    <%= form_for @project, class: "col s12" do |f| %>
      <div class="row">
        <div class="input-field col s6">          
          <%= f.text_field :name %>
          <%= f.label :name,"Name"  %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">          
          <%= f.text_area :description, class: "materialize-textarea" %>
          <%= f.label :description,"Description"  %>
        </div>
      </div>
      <div class="row">
      <%= collection_check_boxes(:project, :skill_ids, Skill.all, :id, :name) do |b| %>
        <div class="col s3">
          <%= b.check_box %>
          <%= b.label %>
        </div>
      <% end %>                 
      </div>
      <div class="row center-align">
        <%= f.submit "Search", class: "btn"%> 
      </div> 
   <% end %>
  </div>
</div>

