<%= render layout: "shared/page_title", locals: {title: @project.name} do %>
  <%= link_to "#modal1", class: "modal-trigger" do %>
    <i class="fa fa-pencil-square-o small icon-center"></i>
  <% end %>
<% end %>

<div class="add-member">
  
</div>
<div id="modal1" class="modal">
  <div class="modal-content blue lighten-5 grey-text text-darken-1">
    <%= form_for @project do |f| %>
      <div class="row">
        <div class="col s8 offset-s2" style="padding-top: 35px;">
          <div class="input-field">        
            <%= f.text_field :name %>
            <%= f.label :name,"Name"  %>
          </div>
          <div class="input-field">
            <%= f.text_area :description, class: "materialize-textarea" %>
            <%= f.label :description,"Description"  %>              
          </div>
           <div class="input-field center-align">
            <%= f.submit "Save", class: "btn"%>
          </div>
        </div>        
      </div>         
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col s12 m6 offset-m3">
      <p class="flow-text center-align"><%= @project.description %></p>
  </div>
</div>
<div class="row">
  <div class="col s4 offset-s2">
     <ul class="collection with-header dropdown-visible">
     <li class="collection-header">
        <div class="anchor">
          <h4>Skills
          <%= link_to "#", id: 'show-skills' do %>
            <i class="fa fa-plus-circle small icon-center right"></i>
          <% end %></h4>
        </div>
      </li>
      <% @skills.each do |skill|%>
        <li class="collection-item">
          <div>
            <%= skill.name %>             
            <%= link_to "#", method: :delete, class: "secondary-content" do%>
                <i class="fa fa-times"></i>
            <% end %>   
          </div>          
        </li>       
      <% end %>  
    </ul> 
  </div>
    <div class="col s4">
     <ul class="collection with-header">
     <li class="collection-header">
        <h4>Members
          <%= link_to "#" do %>
            <i class="fa fa-plus-circle small icon-center right"></i>
          <% end %>
        </h4>
      </li>
      <% @members.each do |member|%>
        <li class="collection-item avatar">
          <div class="row">
            <div class="col s10">
              <i class="fa fa-picture-o circle"></i>
              <span class="title"><%= member.name %></span>
              <p><%= member.email %><br>
                 <%= member.availability ? "Available" : "Unavailable" %>
              </p>  
            </div>
            <div class="col s2">
              <%= link_to "#", method: :delete, class: "secondary-content" do%>
                <i class="fa fa-times"></i>
              <% end %> 
            </div>      
          </div>                   
        </li>   
      <% end %>  
    </ul> 
  </div>
</div>