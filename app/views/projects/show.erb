<%= render "shared/page_title", title: @project.name %>

<div class="row">
  <div class="col s12 m6 offset-m3">
      <p class="flow-text"><%= @project.description %></p>
  </div>
</div>
<div class="row">
  <div class="col s4 offset-s2">
     <ul class="collection with-header">
     <li class="collection-header"><h4>Skills</h4></li>
      <% @skills.each do |skill|%>
        <li class="collection-item">
          <div>
            <%= skill.name %>             
            <%= link_to project_path(@project.id), method: :delete, class: "secondary-content" do%>
                <i class="fa fa-times"></i>
            <% end %>   
            <%= link_to project_path(@project.id), class: "secondary-content" do%>
                <i class="fa fa-info-circle"></i>
            <% end %>   
          </div>          
        </li>       
      <% end %>  
    </ul> 
  </div>
    <div class="col s4">
     <ul class="collection with-header">
     <li class="collection-header"><h4>Members</h4></li>
      <% @members.each do |member|%>
        <li class="collection-item avatar">
          <i class="fa fa-picture-o circle"></i>
          <span class="title"><%= member.name %></span>
          <p><%= member.email %><br>
             <%= member.availability ? "Available" : "Unavailable" %>
          </p>       
        </li>       
      <% end %>  
    </ul> 
  </div>
</div>