<%= render layout: "shared/page_title", locals: {title: @project.name} do %>
  <%= link_to edit_project_path do %>
    <i class="fa fa-pencil-square-o small icon-center"></i>
  <% end %>
<% end %>
<div class="row">
  <div class="col s12 m6 offset-m3">
      <p class="flow-text"><%= @project.description %></p>
  </div>
</div>
<div class="row">
  <div class="col s4 offset-s2">
     <ul class="collection with-header">
     <li class="collection-header">
        <h4>Skills
          <%= link_to "#" do %>
            <i class="fa fa-plus-circle small icon-center right"></i>
          <% end %>
        </h4>
      </li>
      <% @skills.each do |skill|%>
        <li class="collection-item">
          <div>
            <%= skill.name %>             
            <%= link_to "#", method: :delete, class: "secondary-content" do%>
                <i class="fa fa-times"></i>
            <% end %>   
          </div>          
        </li>       
      <% end %>  
    </ul> 
  </div>
    <div class="col s4">
     <ul class="collection with-header">
     <li class="collection-header">
        <h4>Members
          <%= link_to "#" do %>
            <i class="fa fa-plus-circle small icon-center right"></i>
          <% end %>
        </h4>
      </li>
      <% @members.each do |member|%>
        <li class="collection-item avatar">
          <div class="row">
            <div class="col s10">
              <i class="fa fa-picture-o circle"></i>
              <span class="title"><%= member.name %></span>
              <p><%= member.email %><br>
                 <%= member.availability ? "Available" : "Unavailable" %>
              </p>  
            </div>
            <div class="col s2">
              <%= link_to "#", method: :delete, class: "secondary-content" do%>
                <i class="fa fa-times"></i>
              <% end %> 
            </div>      
          </div>                   
        </li>   
      <% end %>  
    </ul> 
  </div>
</div>