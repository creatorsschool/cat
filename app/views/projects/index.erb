<%= render layout: "shared/page_title", locals: {title: "Project List"} do %>
  <%= link_to new_project_path do %>
    <i class="fa fa-plus-circle small icon-center"></i>
  <% end %>
  <%= link_to "#" do %>
    <i class="fa fa-search small icon-center" id="search-button"></i>
  <% end %>
<% end %>

<div class="section"></div>
<div class="container">
  <div class="row hide-form" id="search-input">
    <div class="col s6 offset-s3">
      <div class="input-field"> 
        <%= text_field_tag :search %>
        <%= label_tag :search,'Enter your search query here'  %>  
      </div>
    </div>    
  </div>
  <div class="row">
    <ul class="collection" id="projectsList">
      <% @projects.each do |project|%>
        <li class="collection-item">
          <div>
            <%= project.name %>             
            <%= link_to project_path(project.id), method: :delete, class: "secondary-content" do%>
                <i class="fa fa-times"></i>
            <% end %>   
            <%= link_to project_path(project.id), class: "secondary-content" do%>
                <i class="fa fa-info-circle"></i>
            <% end %>   
          </div>          
        </li>       
      <% end %>  
    </ul>
  </div>
</div>
