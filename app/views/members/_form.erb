<h1>Create member</h1>
<div class="container">
  <div class = "row">
  <%= form_for @member, html:{multipart: "true"} do |f| %>
    <div class="col s6">
    <%= f.label :name %>:
    <%= f.text_field :name %><br/>
    </div>
  </div>

  <div class="row">
    <div class="col s6">
    <%= f.label :email %>:
    <%= f.text_field :email %><br/>
    </div>
  </div>

  <div class="row">
    <div class="col s6">
      <%= f.collection_check_boxes(:skill_ids, @skills, :id, :name) do |b| %>
      <div class="col s3">
        <%=b.check_box%>
        <%=b.label%>
      </div>
        <%end%>

    </div>
  </div>

  <div class="row">
    <div class="col s6">
    <p>Availability</p>
    <%= radio_button_tag(:availability, "true") %>
    <%= label_tag(:availability_true, "Available") %>
    <%= radio_button_tag(:availability, "false") %>
    <%= label_tag(:availability_false, "Not Available") %>
    </div>
  </div>

  <div class="row">
    <div class="col s4">
    <p>Working Hours Preferencies</p>
    <%= f. label :dayshift
    f.text_field :dayshift
    f.select :dayshift, options_for_select([['Day', 'day'], ['Night', 'night']]), {}, class: 'browser-default' %>
    </div>
  </div>
  
  <div class="row">
    <div class="col s4">
  <%= f.file_field(:avatar) %>
    </div>
  </div>

  <%=flash[:error] %>

    <%= f.submit "Create member" %>
  <% end %>
</div>





