<h1>Create member</h1>
  <% if !@member.errors.empty?  %>
    <%@member.errors.messages.each do |key, value|%>
    <div> <%="#{key}: #{value}" %> </div>
    <% end %>
  <%end%>


<div class="container">
  <div class = "row">
  <%= form_for @member, html:{multipart: "true"}, id:"create-member" do |f| %>
    <div class="col s6">
    <%= f.label :name %>:
    <%= f.text_field :name %><br/>
    <% if @member.errors[:name] %>
    <div class="error-for-name">
    <%=@member.errors[:name].join(",") %>
    </div>
    <%end%>
    </div>
  </div>

  <div class="row">
    <div class="col s6">
    <%= f.label :email %>:
    <%= f.text_field :email %><br/>
    </div>
  </div>

  <div class="row">
    <div class="col s6">
      <%=f.label :skills %>
      <%= f.collection_check_boxes(:skill_ids, @skills, :id, :name) do |b| %>
      <div class="col s3">
        <%=b.check_box%>
        <%=b.label%>
      </div>
        <%end%>
       <%=flash[:error] %>
    </div>
  </div>

  <div class="row">
    <div class="col s6">
    <p>Availability</p>
    <%= radio_button_tag(:availability, "true") %>
    <%= label_tag(:availability_true, "Available") %>
    <%= radio_button_tag(:availability, "false") %>
    <%= label_tag(:availability_false, "Not Available") %>
    </div>
  </div>

  <div class="row">
    <div class="col s4">
    <p>Working Hours Preferencies</p>
    <%= f. label :dayshift
    f.text_field :dayshift
    f.select :dayshift, options_for_select([['Day', 'day'], ['Night', 'night']]), {}, class: 'browser-default' %>
    </div>
  </div>
  
  <div class="row">
    <div class="col s4">
  <%= f.file_field(:avatar) %>
    </div>
  </div>

 

    <%= f.submit "Create member" %>
  <% end %>
</div>





