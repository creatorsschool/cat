  <div class="container"> 
    <div class="row">
      <%= form_for :session, url: session_path do |form| %>

        <div class="row">
          <%= form.label :email, class: "signintext" %>
          <%= form.text_field :email, type: 'email', class: "text" %>
        </div>

        <div class="row">
          <%= form.label :password, class: "signintext" %>
          <%= form.password_field :password, class: "text" %>
        </div>

        <div class="row">
          <%= form.submit 'sign in', class: 'btn' %>
        </div>
        
        <div>
          <%= link_to t(".forgot_password"), new_password_path, class: "signintext" %>
        </div>

      <% end %>
    </div>
  </div>
